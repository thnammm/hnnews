{{!-- External CSS --}}
<link rel="stylesheet" type="text/css" href="/css/nav.css">
<link rel="stylesheet" type="text/css" href="/css/menu.css">

{{!-- Navbar not sign-in yet --}}
{{#if isAuthenticatedAccount}}
{{!-- Navbar sign-in already --}}
<div class="row up-nav">
    <div class="col-md-8">
        <div style="font-weight: 700;"><strong class="text-gradient">HN </strong> News</div>
    </div>
    <div class="col-md-4 logined-right">
        <div id="phone-contact">
            <i class="fa fa-phone fa-rotate-90" style="font-size: 11pt"></i> 0123.456.789
        </div>
        <div id="already-login">
            <a href="/thongtincanhan" class="a-tag-username"> <i class="fa fa-user-circle" aria-hidden="true"></i>
                {{authAccount.fullname}} </a>
        </div>
    </div>
</div>

<div id="scroll-nav">
    <div class="nav-main">
        <div class="row">
            <div class="col-md-4 nav-logo">
                <a href="/"> <img id="hnnews-logo" src="/img/general/logo.png" alt="HN News"> </a>
            </div>
            <div class="col-md-8 nav-container">
                <form id="nav-search-box" method="GET" action="/timkiem" class="text-search">
                    <i class="fas fa-search icon-search" style="font-size: 12pt;"></i>
                    <input class="form-control search-box" id="text-search-box" type="text"
                        placeholder="Nhập nội dung tìm kiếm..." name="search" ng-model="searchItem" />
                </form>
            </div>
        </div>
    </div>

    <div class="shadowbox-nav"></div>
    {{else}}
    <div class="row up-nav">
        <div class="col-md-6">
            <div style="font-weight: 700;"><strong class="text-gradient">HN </strong> News</div>
        </div>
        <div class="col-md-3" id="phone-contact">
            <i class="fa fa-phone fa-rotate-90" style="font-size: 11pt"></i> 0123.456.789
        </div>
        <div class="col-md-3" id="login-register-area">
            <a href="/dangky" id="register-choice" class="choice-here"> Đăng ký </a>
            <a href="/dangnhap" id="login-choice" class="choice-here"> Đăng nhập </a>
        </div>
    </div>

    <div id="scroll-nav">
        <div class="nav-main">
            <div class="row">
                <div class="col-md-4 nav-logo">
                    <a href="/"> <img id="hnnews-logo" src="/img/general/logo.png" alt="HN News"> </a>
                </div>
                <div class="col-md-8 nav-container">
                    <form id="nav-search-box" method="GET" action="/timkiem" class="text-search">
                        <i class="fas fa-search icon-search" style="font-size: 12pt;"></i>
                        <input class="form-control search-box" type="text" placeholder="Nhập nội dung tìm kiếm..."
                            name="search" ng-model="searchItem" />
                    </form>
                </div>
            </div>
        </div>

        <div class="shadowbox-nav"></div>
        {{/if}}

        {{!-- Menu category --}}
        <div class="row menu">
            <div class="col-md menu-drop" style="padding-right: 5px;">
                {{#each listCategory}}
                {{#ifEquals id "1"}}
                <a class="dropdown-toggle menu-link" href="/chuyenmuc/{{id}}" id="catbtn-entertainment"
                    aria-haspopup="true" aria-expanded="false">
                    GIẢI TRÍ
                </a>
                {{/ifEquals}}
                {{/each}}
                <div class="dropdown-menu" id="entertainment" aria-labelledby="catbtn-entertainment">
                    {{#each listSubCategory}}
                    {{#ifEquals cat_id "1"}}
                    <a class="dropdown-item" href="/chuyenmuc/{{cat_id}}/{{subcat_id}}">{{subcategory_name}}</a>
                    {{/ifEquals}}
                    {{/each}}
                </div>
            </div>
            <div class="col-md resize-col-menu menu-drop">
                {{#each listCategory}}
                {{#ifEquals id "2"}}

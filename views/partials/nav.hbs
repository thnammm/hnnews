        <div class="line-under-menu"></div>
    </div>

    {{!-- JQuery 3.3.1 --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".menu-drop").hover(function () {
                $(this).children(".dropdown-menu").css("display", "block");
                $(this).children(".menu-link").css("font-weight", "700");
                $(this).children(".menu-link").css("color", "black");
            }, function () {
                $(this).children(".dropdown-menu").css("display", "none");
                $(this).children(".menu-link").css("font-weight", "500");
                $(this).children(".menu-link").css("color", "rgb(86, 86, 86)");
            });
        })
    </script>
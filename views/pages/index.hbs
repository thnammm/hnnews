<!DOCTYPE html>
<html lang="en">

<head>
    {{> header}}
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title> HNNews - Trang chủ </title>
</head>

<body>
    {{!-- Navigation bar --}}
    {{> nav}}

    {{!-- Menu bar --}}
    {{!-- {{> menu}} --}}

    <div class="container">
        {{!-- Body detail --}}
        {{!-- <img src="/img/HomePage.png" width="100%"> --}}
        <div id="scroll-smooth"></div>

        <div id="id-highlight-new" class="row highlight-new">
            <div class="col-md-3 align-middle">
                <div class="highlight-left-text"> TIN NỔI BẬT </div>
                <div class="row highlight-left-line-1"></div>
                <div class="row highlight-left-line-2"></div>
                <div class="row highlight-left-line-3"></div>
                <img class="highlight-left-pic" src="/img/general/highlight-left-pic.png">
            </div>
            <div class="col-md-9 align-middle" style="padding: 0px 40px;">
                <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        {{#each bestofbestpost.[0]}}
                        <div class="carousel-item active">
                            <img src="{{link_image}}" class="d-block w-100 highlight-right-pic" alt="{{link_name}}">
                            <div class="transparent"></div>
                            <div class="carousel-caption d-none d-md-block top">
                                <p>{{subcategory_name}}</p>
                            </div>
                            <div class="carousel-caption d-none d-md-block center">
                                <p>{{title}}</p>
                            </div>
                            <div class="carousel-caption d-none d-md-block bottom">
                                <p>{{finaldate}}</p>
                            </div>
                        </div>
                        {{/each}}
                        {{#each bestpost.[0]}}
                        <div class="carousel-item">
                            <img src="{{link_image}}" class="d-block w-100 highlight-right-pic" alt="{{link_name}}">
                            <div class="transparent"></div>
                            <div class="carousel-caption d-none d-md-block top">
                                <p>{{subcategory_name}}</p>
                            </div>
                            <div class="carousel-caption d-none d-md-block center">
                                <p>{{title}}</p>
                            </div>
                            <div class="carousel-caption d-none d-md-block bottom">
                                <p>{{finaldate}}</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="row ctn-line-under"></div>

        <div class="row main-new">
            {{!-- Content-left --}}
            <div class="col-md-9">
                {{!-- Newest posts --}}
                <div id="id-newest-post" class="row row-margin newest-post">
                    <div class="col-md-5 newest-post-title">
                        <p class="newest-post-title-text"> BÀI VIẾT MỚI NHẤT </p>
                    </div>
                    <div class="col-md-7">
                        <div class="line-continue"></div>
                    </div>
                </div>

                {{#each newpost.[0]}}
                <div class="row row-margin newest-post-content">
                    <div class="col-md-5 newest-post-content-pic">
                        <img class="content-pic-pic" src="{{link_image}}" alt="{{link_name}}">
                        <div class="content-pic-transparent"></div>
                        <p class="content-pic-category"> Chuyên mục: {{category_name}} - {{subcategory_name}} </p>
                        <a class="content-pic-info" href=""> Xem chi tiết </a>
                    </div>
                    <div class="col-md-7 newest-post-content-detail">
                        <p class="content-detail-title"> {{title}} </p>
                        <p class="content-detail-number"> {{finaldate}} - {{views}} lượt xem </p>
                    </div>
                </div>
                {{/each}}

                {{!-- Viewest posts --}}
                <div id="id-viewest-post" class="row row-margin viewest-post">
                    <div class="col-md-5 newest-post-title">
                        <p class="viewest-post-title-text"> BÀI VIẾT XEM NHIỀU NHẤT </p>
                    </div>
                    <div class="col-md-7">
                        <div class="line-continue"></div>
                    </div>
                </div>

                {{#each viewpost.[0]}}
                <div class="row row-margin newest-post-content">
                    <div class="col-md-5 newest-post-content-pic">
                        <img class="content-pic-pic" src="{{link_image}}" alt="{{link_name}}">
                        <div class="content-pic-transparent"></div>
                        <p class="content-pic-category"> Chuyên mục: {{category_name}} - {{subcategory_name}} </p>
                        <a class="content-pic-info" href=""> Xem chi tiết </a>
                    </div>
                    <div class="col-md-7 newest-post-content-detail">
                        <p class="content-detail-title"> {{title}} </p>
                        <p class="content-detail-number"> {{finaldate}} - {{views}} lượt xem </p>
                    </div>
                </div>
                {{/each}}

                {{!-- Top 10 posts --}}
                <div id="id-top10-post" class="row row-margin top10-post">
                    <div class="col-md-5 newest-post-title">
                        <p class="top10-post-title-text"> TOP 8 CHUYÊN MỤC </p>
                    </div>
                    <div class="col-md-7">
                        <div class="line-continue"></div>
                    </div>
                </div>

                <div class="row row-margin top10-post-content">
                    {{#each top10post.[0]}}
                    <div class="col-md-6 top10-post-content-detail">
                        <div class="row row-margin top10-post-content-part">
                            <div class="line-left"></div>
                            <div class="top10-post-content-title">
                                {{category_name}}
                            </div>
                        </div>
                        <div class="row row-margin top10-post-content-part">
                            <img class="top10-post-content-pic" src="{{link_image}}" alt="{{link_name}}">
                            <div class="top10-post-content-transparent"></div>
                            <div class="col-md-12">
                                <p class="top10-post-content-category"> Chuyên mục: {{category_name}} -
                                    {{subcategory_name}} </p>
                            </div>
                        </div>
                        <div class="row row-margin top10-post-content-part">
                            <p class="top10-post-content-text"> {{title}} </p>
                            <p class="top10-post-content-number"> {{finaldate}} - {{views}} lượt xem </p>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>

            {{!-- Content-right --}}
            <div class="col-md-3">
                <div class="row row-margin content-right">
                    <div class="col-md-12 line-top"></div>
                    <div class="col-md-12 title-left">
                        <a href="/hashtag-list" class="title-left-hyperlink"> CÁC NHÃN DÁN </a>
                    </div>
                    <div class="col-md-12 line-bottom-title"></div>
                    <div class="row row-margin" style="margin-top: 15px !important">
                        {{#each top10tag.[0]}}
                        <div class="col-md-6 img-hash">
                            <img src="img/hashtag-pic.png" width="90%" style="border-radius: 5px">
                            <div class="text-hash">{{tag_name}}</div>
                            <div class="text2-hash">{{tagvalue}} bài viết</div>
                        </div>
                        {{/each}}
                    </div>
                    <a href="#" class="giris-yap-buton"> XEM TẤT CẢ </a>
                </div>
            </div>
        </div>

        <div class="row ctn-line-under"></div>

        <div class="row statistic">
            {{#each statistic.[0]}}
            <div class="col-md-4">
                <div class="row statistic-detail">
                    <div class="col-md-3 statistic-left">
                        <img class="statistic-pic" src="/img/general/icon-statistic/statistic-01.png">
                    </div>
                    <div class="col-md-9 statistic-right">
                        <p class="statistic-title"> Tài khoản </p>
                        <p class="statistic-number"> {{accountvalue}} </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row statistic-detail">
                    <div class="col-md-3 statistic-left">
                        <img class="statistic-pic" src="/img/general/icon-statistic/statistic-02.png">
                    </div>
                    <div class="col-md-9 statistic-right">
                        <p class="statistic-title"> Lượt xem </p>
                        <p class="statistic-number"> {{viewvalue}} </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row statistic-detail">
                    <div class="col-md-3 statistic-left">
                        <img class="statistic-pic" src="/img/general/icon-statistic/statistic-03.png">
                    </div>
                    <div class="col-md-9 statistic-right">
                        <p class="statistic-title"> Bài viết </p>
                        <p class="statistic-number"> {{postvalue}} </p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="row ctn-line-under" style="margin-bottom: 50px !important;"></div>

        <div class="position-fixed rscr-btn">
            <img src="/img/scrollbar/rscr-btn.png">
        </div>

        <div class="position-fixed lscr-bar">
            <div class="lscr lscr-best lscr-checked" href="#id-highlight-new">
                <img class="lscr-img" src="/img/scrollbar/lscr-best-checked.png">
                <p class="lscr-title"> Nổi bật </p>
            </div>
            <div class="lscr-line-between"></div>
            <div class="lscr lscr-new" href="#id-newest-post">
                <img class="lscr-img" src="/img/scrollbar/lscr-new.png">
                <p class="lscr-title"> Mới nhất </p>
            </div>
            <div class="lscr-line-between"></div>
            <div class="lscr lscr-view" href="#id-viewest-post">
                <img class="lscr-img" src="/img/scrollbar/lscr-view.png">
                <p class="lscr-title"> Lượt xem </p>
            </div>
            <div class="lscr-line-between"></div>
            <div class="lscr lscr-category" href="#id-top10-post">
                <img class="lscr-img" src="/img/scrollbar/lscr-category.png">
                <p class="lscr-title"> Top 10 </p>
            </div>
        </div>

        {{!-- Footer --}}
        {{> footer}}

    </div>

    {{!-- Bootstrap 4.3.1 --}}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    {{!-- JQuery 3.3.1 --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    {{!-- JavaScript --}}
    <script>
        $(document).ready(function () {
            // Auto scroll to top
            $(window).scrollTop(0);

            $(window).scroll(function () {
                if ($(window).scrollTop() > 27) {
                    $("#scroll-smooth").css("display", "block");
                    $("#scroll-nav").addClass("position-fixed");
                    $("#scroll-nav").addClass("bootstrap-position-fixed");
                    $(".menu").addClass("menu-scroll");
                    $(".line-under-menu").hide();
                    $(".shadowbox-nav").hide();
                    $(".menu-link").hover(function () {
                        $(this).css("color", "blue");
                        $(this).css("font-weight", "700");
                    }, function () {
                        $(this).css("color", "rgb(86, 86, 86)");
                        $(this).css("font-weight", "500");
                    });
                }
                else {
                    $("#scroll-smooth").css("display", "none");
                    $("#scroll-nav").removeClass("position-fixed");
                    $("#scroll-nav").removeClass("bootstrap-position-fixed");
                    $(".menu").removeClass("menu-scroll");
                    $(".line-under-menu").show();
                    $(".shadowbox-nav").show();
                    $(".menu-link").hover(function () {
                        $(this).css("color", "black");
                    }, function () {
                        $(this).css("color", "rgb(86, 86, 86)");
                    });
                }
            });

            $(".rscr-btn").hide();
            $(window).scroll(function () {
                if ($(window).scrollTop() > 500) {
                    $(".rscr-btn").show();
                }
                else {
                    $(".rscr-btn").hide();
                }
            });

            $(".rscr-btn").click(function () {
                $([document.documentElement, document.body]).animate({
                    scrollTop: $("body").offset().top
                }, 1000);
            });

            $(".lscr").click(function (e) {
                var jump = $(this).attr('href');
                var new_position = $(jump).offset();
                $('html, body').stop().animate({ scrollTop: new_position.top - 130 }, 1000);
                e.preventDefault();
            });

            $(".lscr").hover(function () {
                if ($(this).hasClass("lscr-checked") === false) {
                    var x = $(this).children("img").attr("src");
                    var y = x.substr(-4, 4);
                    var z = x.replace(y, '-checked.png');
                    $(this).children("img").attr("src", z);
                    $(this).children("p").addClass("lscr-checked");
                }
            }, function () {
                if ($(this).hasClass("lscr-checked") === false) {
                    var x = $(this).children("img").attr("src");
                    var y = x.substr(-12, 12);
                    var z = x.replace(y, '.png');
                    $(this).children("img").attr("src", z);
                    $(this).children("p").removeClass("lscr-checked");
                }
            });

            $(".lscr").click(function () {
                if ($(this).hasClass("lscr-checked") === false) {
                    /* Minus checked for image checked */
                    var x = $(".lscr-bar").children(".lscr-checked").children("img").attr("src");
                    var y = x.substr(-12, 12);
                    var z = x.replace(y, '.png');
                    $(".lscr-bar").children(".lscr-checked").children("img").attr("src", z);
                    $(".lscr-bar").children(".lscr-checked").removeClass("lscr-checked");

                    /* Add checked for image not checked */
                    $(this).addClass("lscr-checked");
                }
            });

            $(window).scroll(function () {
                if ($(window).scrollTop() > 389 && $(window).scrollTop() < 2380) {
                    var x = $(".lscr-bar").children(".lscr-checked").children("img").attr("src");
                    var y = x.substr(-12, 12);
                    var z = x.replace(y, '.png');
                    $(".lscr-bar").children(".lscr-checked").children("img").attr("src", z);
                    $(".lscr-bar").children(".lscr-checked").removeClass("lscr-checked");

                    $(".lscr-new").children("img").attr("src", "/img/scrollbar/lscr-new-checked.png");
                    $(".lscr-new").addClass("lscr-checked");
                }

                if ($(window).scrollTop() > 2380 && $(window).scrollTop() < 4390) {
                    var x = $(".lscr-bar").children(".lscr-checked").children("img").attr("src");
                    var y = x.substr(-12, 12);
                    var z = x.replace(y, '.png');
                    $(".lscr-bar").children(".lscr-checked").children("img").attr("src", z);
                    $(".lscr-bar").children(".lscr-checked").removeClass("lscr-checked");

                    $(".lscr-view").children("img").attr("src", "/img/scrollbar/lscr-view-checked.png");
                    $(".lscr-view").addClass("lscr-checked");
                }

                if ($(window).scrollTop() > 4390) {
                    var x = $(".lscr-bar").children(".lscr-checked").children("img").attr("src");
                    var y = x.substr(-12, 12);
                    var z = x.replace(y, '.png');
                    $(".lscr-bar").children(".lscr-checked").children("img").attr("src", z);
                    $(".lscr-bar").children(".lscr-checked").removeClass("lscr-checked");

                    $(".lscr-category").children("img").attr("src", "/img/scrollbar/lscr-category-checked.png");
                    $(".lscr-category").addClass("lscr-checked");
                }

                if ($(window).scrollTop() < 180) {
                    var x = $(".lscr-bar").children(".lscr-checked").children("img").attr("src");
                    var y = x.substr(-12, 12);
                    var z = x.replace(y, '.png');
                    $(".lscr-bar").children(".lscr-checked").children("img").attr("src", z);
                    $(".lscr-bar").children(".lscr-checked").removeClass("lscr-checked");

                    $(".lscr-best").children("img").attr("src", "/img/scrollbar/lscr-best-checked.png");
                    $(".lscr-best").addClass("lscr-checked");
                }
            });
        })
    </script>

</body>

</html>
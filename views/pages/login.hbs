                        <!-- Şifre İnput Giriş-->
                        <div class="group">
                            <input type="password" required>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label><span class="span-input">Mật khẩu</span></label>
                        </div>
                        <!-- Şifre İnput Giriş Bitiş-->

                        <!-- Giriş Yap Buton -->
                        <a href="javascript:void(0);" class="giris-yap-buton">Đăng nhập</a>

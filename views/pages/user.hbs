<!DOCTYPE html>
<html lang="en">

<head>
    {{> header}}
    <link rel="stylesheet" type="text/css" href="/css/user.css">
    <title> HNNews - Trang cá nhân </title>
    <script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
</head>

<body>
    <div class="container">
        {{!-- Navigation bar --}}
        {{> nav}}

        {{!-- Body detail --}}
        <div class="row user-body">
            <div class="col-md-3">
                <div class="menu-left">
                    <img class="avatar" src="/img/avatar/1.png">
                    <div class="name"> TRẦN HẠO NAM </div>
                    <div class="boxshadow">
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#personal-information"
                                data-toggle="collapse" id="btn-personal-information">
                                Thông tin cá nhân </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#new-post" data-toggle="collapse"
                                id="btn-new-post">
                                Viết bài mới </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#list-posts" data-toggle="collapse"
                                id="btn-list-posts">
                                Danh sách bài viết </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#change-password" data-toggle="collapse"
                                id="btn-change-password">
                                Đổi mật khẩu </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" id="btn-logout"> Đăng xuất </a>
                        </li>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="content-right">
                    <div id="tab-content">

                        <!-- Personal information -->
                        <div class="content collapse" id="personal-information" data-parent="#tab-content">
                            <div class="row" style="margin: 10px 20px">
                                <div class="col-md-3" style="text-align: center;">
                                    <img src="/img/avatar/1.png" class="m-x-auto img-fluid rounded-circle ava"
                                        alt="avatar">
                                    <label class="custom-file">
                                        <span class="custom-file-control"> Đổi Avatar </span>
                                    </label>
                                </div>
                                <div class="col-md-9">
                                    <form role="form" method="POST" action="">
                                        <!-- Name -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Họ và tên
                                            </label>
                                            <input name="name" class="col-md-10 form-control form-text-size" type="text"
                                                placeholder="Nhập họ và tên của bạn">
                                        </div>
                                        <!-- Email -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Email </label>
                                            <input name="email" class="col-md-10 form-control form-text-size"
                                                type="email" placeholder="Nhập email của bạn">
                                        </div>
                                        <!-- Day of birth -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Ngày tháng năm
                                                sinh
                                            </label>
                                            <input name="dob" class="col-md-10 form-control form-text-size" type="date"
                                                value="2019-01-01">
                                        </div>
                                        <!-- Gender -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Giới tính
                                            </label>
                                            <div class="col-md-10">
                                                <div class="form-check form-check-inline">
                                                    <label class="radio-inline form-text-size" style="margin: 0;"><input
                                                            class="form-check-input" type="radio" name="gender"
                                                            value="Nam" checked> Nam
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <label class="radio-inline form-text-size" style="margin: 0;"><input
                                                            class="form-check-input" type="radio" name="gender"
                                                            value="Nữ"> Nữ </label>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Writer name -->
                                        <div class="form-group">
                                            <label class="col-lg-6 col-form-label form-control-label"> Bút danh
                                            </label>
                                            <input name="writer" class="col-md-10 form-control form-text-size"
                                                type="text" placeholder="Nhập bút danh của bạn">
                                        </div>
                                        <!-- Button -->
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary col-md-3" value="Cập nhật">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- New post -->
                        <div class="content collapse" id="new-post" data-parent="#tab-content">
                            <div class="col-md-12 post-content-area">
                                <form role="form" method="POST" action="">
                                    <!-- Avatar post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Ảnh đại diện bài viết
                                        </label>
                                        <input name="ava-post" type="file" class="form-control-file form-text-size"
                                            style="padding: 5px 0px;" aria-describedby="fileHelp">
                                    </div>
                                    <!-- Title post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Tiêu đề bài viết
                                        </label>
                                        <input name="title-post" class="col-md-10 form-control form-text-size"
                                            type="text" placeholder="Nhập tiêu đề">
                                    </div>
                                    <!-- Summary post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Tóm tắt bài viết
                                        </label>
                                        <textarea name="summary-post" class="col-md-10 form-control form-text-size"
                                            type="text" placeholder="Nhập tóm tắt bài viết"> </textarea>
                                    </div>
                                    <!-- Inside post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Nội dung bài viết
                                        </label>
                                        <div class="col-md-10" style="padding: 0;">
                                            <textarea class="col-md-10 form-control form-text-size"
                                                name="editor1"></textarea></div>
                                        <script>
                                            CKEDITOR.replace('editor1');
                                        </script>
                                    </div>
                                    <!-- Category and tag post -->
                                    <div class="form-group row" style="margin: 0;">
                                        <div class="col-md-4" style="padding-left: 0;">
                                            <label class="col-form-label form-control-label"> Chuyên mục bài viết
                                            </label>
                                            <select name="category-post" class="col-md-12 form-control form-text-size"
                                                placeholder="Chọn chuyên mục bài viết">
                                                <option> Giao thông </option>
                                                <option> Xã hội </option>
                                                <option> Thế giới </option>
                                                <option> Giải trí </option>
                                            </select>
                                        </div>
                                        <div class="col-md-8" style="padding-left: 0;">
                                            <label class="col-form-label form-control-label"> Nhãn dán bài viết </label>
                                            <input name="tag-post" class="col-md-9 form-control form-text-size"
                                                type="text" placeholder="Gán nhãn cho bài viết">
                                        </div>
                                    </div>
                                    <!-- Button -->
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary col-md-3" value="Gửi bài viết">
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- List posts -->
                        <div class="content collapse" id="list-posts" data-parent="#tab-content">
                            <div id="passwordForm" class="col-md-8 passchange">
                                <!-- Old password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu cũ </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="oldpassword" id="oldpassword" placeholder="Nhập mật khẩu cũ"
                                        autocomplete="off">
                                </div>
                                <!-- New password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu mới </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="newpassword" id="newpassword" placeholder="Nhập mật khẩu mới"
                                        autocomplete="off">
                                </div>
                                <!-- Retype new password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Nhập lại mật khẩu </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="retypepassword" id="retypepassword" placeholder="Nhập lại mật khẩu mới"
                                        autocomplete="off">
                                </div>
                                <button class="col-md-4 btn btn-load btn-lg btn-primary" id="btn-pass"
                                    data-loading-text="Changing Password..."> Đổi mật khẩu </button>
                            </div>
                            <div class="col-md-8 passchange">
                                <a href="#" class="forgot-password"> Quên mật khẩu? </a>
                            </div>
                        </div>

                        <!-- Change password -->
                        <div class="content collapse" id="change-password" data-parent="#tab-content">
                            <div id="passwordForm" class="col-md-8 passchange">
                                <!-- Old password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu cũ </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="oldpassword" id="oldpassword" placeholder="Nhập mật khẩu cũ"
                                        autocomplete="off">
                                </div>
                                <!-- New password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu mới </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="newpassword" id="newpassword" placeholder="Nhập mật khẩu mới"
                                        autocomplete="off">
                                </div>
                                <!-- Retype new password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Nhập lại mật khẩu </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="retypepassword" id="retypepassword" placeholder="Nhập lại mật khẩu mới"
                                        autocomplete="off">
                                </div>
                                <button class="col-md-4 btn btn-load btn-lg btn-primary" id="btn-pass"
                                    data-loading-text="Changing Password..."> Đổi mật khẩu </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Footer --}}
        {{> footer}}
    </div>

    {{!-- Bootstrap 4.3.1 --}}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    {{!-- JQuery 3.3.1 --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    {{!-- Script JS --}}
    <script>
        $(".user-setting-link").click(function () {
            $("#btn-personal-information").parent(".list").removeClass("bg-active-now");
            $("#btn-personal-information").removeClass("text-active-now");
            $("#btn-new-post").parent(".list").removeClass("bg-active-now");
            $("#btn-new-post").removeClass("text-active-now");
            $("#btn-list-posts").parent(".list").removeClass("bg-active-now");
            $("#btn-list-posts").removeClass("text-active-now");
            $("#btn-change-password").parent(".list").removeClass("bg-active-now");
            $("#btn-change-password").removeClass("text-active-now");
            $(this).parent(".list").addClass("bg-active-now");
            $(this).addClass("text-active-now");
        });

        $(".list").hover(function () {
            $(this).children(".user-setting-link").css("color", "white");
        }, function () {
            $(this).children(".user-setting-link").css("color", "black");
        });
    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    {{> header}}
    <link rel="stylesheet" type="text/css" href="/css/category-subcategory-detail.css">
    <title> HNNews </title>
</head>

<body>
    {{>nav}}

    <div class="content">
        <div id="scroll-smooth"></div>
        <div class="row row-margin">
            {{#if error}}
            <div class="col-md-12 alert alert-danger" style="height: initial; margin: 20px 0px; text-align: center"
                role="alert">
                <p style="margin: 20px 0px;"> <i class="fas fa-sad-tear"
                        style="color: rgb(235, 129, 129); font-size: 200px;"></i> </p>
                <p style="margin: 20px 0px;"> Không tìm thấy dữ liệu chuyên mục, lỗi ID truy cập.<a href="/"
                        class="alert-link"> Quay về trang chủ </a> </p>
            </div>
            {{else}}
            <div class="col-md-8">
                <div class="row text-row row-margin" style="padding: 8px 0px">
                    {{#with subcatvalue.[0]}}
                    <div class="col-md-6 text-left">
                        <div class="line-left"></div>
                        <div style="font-weight:700; line-height: 24px; text-transform: uppercase;">
                            {{subcategory_name}}
                        </div>
                    </div>
                    <div class="col-md-6 text-right" style="font-size: 11pt; line-height: 24px">{{postvalue}} kết quả
                    </div>
                    {{/with}}
                </div>

                {{#each singlesubcat}}
                <div class="row row-margin something" style="margin-top: 35px !important">
                    <div class="col-md-5 img-postofcat" style="padding: 0">
                        <a href="/baiviet/{{cat_id}}/{{subcat_id}}/{{post_id}}">
                            <img src="{{link_image}}" alt="{{link_name}}" class="postofcat-style">
                        </a>
                    </div>
                    <div class="col-md-7 post-flex">
                        <div>
                            <div class="title-post text-left">
                                <a href="/baiviet/{{cat_id}}/{{subcat_id}}/{{post_id}}"
                                    class="title-postofcat">{{title}}</a>
                            </div>
                            <div class="post-date text-left">
                                {{finaldate}} - {{views}} lượt xem - <a href="/chuyenmuc/{{cat_id}}/{{subcat_id}}"
                                    class="subname-postcat">{{subcategory_name}}</a>
                            </div>
                            <div class="post-summary text-left">
                                {{summary}}
                            </div>
                        </div>
                        <div class="post-hashtag text-left">
                            {{#each tagofpost}}
                            <a href="/nhandan/{{tag_id}}" class="a-tag-specialstyle"> {{tag_name}} </a>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/each}}

                {{!-- Pagination --}}
                <nav class="nav-pagination" aria-label="...">
                    <ul class="pagination">
                        {{#with btnPrevious}}
                        {{#if disable}}
                        <li class="page-item disabled">
                            {{else}}
                        <li class="page-item">
                            {{/if}}
                            <a class="page-link" href="?page={{value}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        {{/with}}

                        {{#each subcatpagination}}
                        {{#if active}}
                        <li class="page-item active"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}

                        {{#with btnNext}}
                        {{#if disable}}
                        <li class="page-item disabled">
                            {{else}}
                        <li class="page-item">
                            {{/if}}
                            <a class="page-link" href="?page={{value}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                        {{/with}}
                    </ul>
                </nav>
            </div>

            <div class="col-md-4">
                <div class="row row-margin content-right">
                    <div class="col-md-12 line-top"></div>
                    <div class="col-md-12 title-left">XEM NHIỀU</div>
                    <div class="col-md-12 line-bottom-title"></div>
                    {{#each viewmuch}}
                    <a href="/baiviet/{{cat_id}}/{{subcat_id}}/{{post_id}}" class="row row-margin viewmuch"
                        style="margin-top: 15px !important">
                        <div class="col-md-6" style="padding-right: 7px"><img class="viewmuch-pic" src="{{link_image}}"
                                alt="{{link_name}}"></div>
                        <div class="col-md-6" style="padding-left: 7px; font-size: 10pt;">{{title}}</div>
                    </a>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>

    <img src="/img/scrollbar/rscr-btn.png" alt="" class="rscr-btn scroll-to-top">
    {{!-- Footer --}}
    {{>footer}}

    {{!-- Bootstrap 4.3.1 --}}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    {{!-- JQuery 3.3.1 --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    {{!-- Script --}}
    <script>
        $(document).ready(function () {
            // Auto scroll to top
            $(window).scrollTop(0);

            $(window).scroll(function () {
                if ($(window).scrollTop() > 27) {
                    $("#scroll-smooth").css("display", "block");
                    $("#scroll-nav").addClass("position-fixed");
                    $("#scroll-nav").addClass("bootstrap-position-fixed");
                    $(".menu").addClass("menu-scroll");
                    $(".line-under-menu").hide();
                    $(".shadowbox-nav").hide();
                    $(".menu-link").hover(function () {
                        $(this).css("color", "blue");
                        $(this).css("font-weight", "700");
                    }, function () {
                        $(this).css("color", "rgb(86, 86, 86)");
                        $(this).css("font-weight", "500");
                    });
                }
                else {
                    $("#scroll-smooth").css("display", "none");
                    $("#scroll-nav").removeClass("position-fixed");
                    $("#scroll-nav").removeClass("bootstrap-position-fixed");
                    $(".menu").removeClass("menu-scroll");
                    $(".line-under-menu").show();
                    $(".shadowbox-nav").show();
                    $(".menu-link").hover(function () {
                        $(this).css("color", "black");
                    }, function () {
                        $(this).css("color", "rgb(86, 86, 86)");
                    });
                }
            });

            $(".rscr-btn").hide();
            $(window).scroll(function () {
                if ($(window).scrollTop() > 300) {
                    $(".rscr-btn").show();
                }
                else {
                    $(".rscr-btn").hide();
                }
            });

            $(".rscr-btn").click(function () {
                $([document.documentElement, document.body]).animate({
                    scrollTop: $("body").offset().top
                }, 1000);
            });
        })
    </script>
</body>

</html>
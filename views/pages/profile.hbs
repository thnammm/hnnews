<!DOCTYPE html>
<html lang="en">

<head>
    {{> header}}
    <link rel="stylesheet" type="text/css" href="/css/profile.css">
    <title> HNNews - Trang cá nhân </title>
    <script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
</head>

<body>
    <div class="container">
        {{!-- Navigation bar --}}
        {{> nav}}

        {{#if err_message}}
        <div class="alert alert-warning alert-dismissible fade show popupupdateprofile-background" role="alert">
            <div class="col-md-12 noti-popupupdateprofile">
                <p class="popup-title"> THÔNG BÁO LỖI </p>
                <p class="popup-content"> {{{err_message}}} </p>
                <button onclick="window.location.href = '/thongtincanhan';" type="button"
                    class="btn btn-dark close-btn"> Đóng </button>
            </div>
        </div>
        {{/if}}

        {{#ifCond isAuthenticatedAccount authAccount.role_id 1}}
        {{!-- User --}}
        <div class="row user-body">

            {{!-- Menu --}}
            <div class="col-md-3">
                <div class="menu-left">
                    <img class="avatar" src="/img/avatar/1.png">
                    <div class="name"> {{authAccount.fullname}} </div>
                    <div class="boxshadow">
                        <li class="user-setting list bg-active-now">
                            <a href="" class="user-setting-link text-active-now" data-target="#personal-information"
                                data-toggle="collapse" id="btn-personal-information">
                                Thông tin cá nhân </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#purchase-premium" data-toggle="collapse"
                                id="btn-purchase-premium">
                                Gia hạn tài khoản </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#change-password" data-toggle="collapse"
                                id="btn-change-password">
                                Đổi mật khẩu </a>
                        </li>
                        <li class="user-setting list menu-logout">
                            <form id="usermenu-logout" method="POST" action="/dangxuat">
                                <a onclick="$('#usermenu-logout').submit();" class="user-setting-link" id="btn-logout">
                                    Đăng xuất </a>
                            </form>
                        </li>
                    </div>
                </div>
            </div>

            {{!-- Content --}}
            <div class="col-md-9">
                <div class="content-right">
                    <div id="tab-content">

                        <!-- Personal information -->
                        <div class="content collapse show" id="personal-information" data-parent="#tab-content">
                            <div class="row" style="margin: 10px 20px">
                                <div class="col-md-3" style="text-align: center;">
                                    <img src="/img/avatar/1.png" class="m-x-auto img-fluid rounded-circle ava"
                                        alt="avatar">
                                    <label class="custom-file">
                                        <span class="custom-file-control"> Đổi Avatar </span>
                                    </label>
                                </div>
                                <div class="col-md-9">
                                    <form role="form" method="POST" action="/thongtincanhan/capnhatthongtin">
                                        {{#with user}}

                                        <!-- Name -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Họ và tên
                                            </label>
                                            <input name="username" class="col-md-10 form-control form-text-size"
                                                type="text" placeholder="Nhập họ và tên của bạn" value="{{full_name}}">
                                        </div>

                                        <!-- Email -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Email </label>
                                            <input name="useremail" class="col-md-10 form-control form-text-size"
                                                type="email" placeholder="Nhập email của bạn" value="{{email}}">
                                        </div>

                                        <!-- Day of birth -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Ngày tháng năm
                                                sinh
                                            </label>
                                            <input name="userdob" class="col-md-10 form-control form-text-size"
                                                type="date" value="{{dob}}">
                                        </div>

                                        <!-- Day Account -->
                                        <div class="col-md-10"
                                            style="padding: 0;display: flex; flex-direction: row; justify-content: space-between;">
                                            <div class="row form-group"
                                                style="margin: 0; display: flex; justify-content: flex-start">
                                                <label class="col-md-10 col-form-label form-control-label"> Ngày tạo
                                                </label>
                                                <input name="dob" class="col-md-10 form-control form-text-size"
                                                    type="text" value="{{start_date}}" disabled>
                                            </div>
                                            <div class="row form-group"
                                                style="margin: 0; display: flex; justify-content: flex-end">
                                                <label class="col-md-10 col-form-label form-control-label"> Ngày hết hạn
                                                </label>
                                                <input name="dob" class="col-md-10 form-control form-text-size"
                                                    type="text" value="{{end_date}}" disabled>
                                            </div>
                                        </div>

                                        <!-- Button -->
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary col-md-3" value="Cập nhật"> Cập
                                                nhật
                                            </button>
                                        </div>
                                        {{/with}}
                                    </form>

                                </div>
                            </div>
                        </div>

                        <!-- Purchase Premium -->
                        <div class="content collapse" id="purchase-premium" data-parent="#tab-content">
                            <div class="col-md-12 purchase-notification">
                                <p style="padding: 5px 20px; text-align: justify;"> Tính năng này chưa phát triển, vui
                                    lòng liên hệ <span style="color: #8DB1F7; font-weight: 700;"> Quản trị viên </span>
                                    trang báo HNNews thông qua email: <span style="color: red; font-weight: 700;">
                                        hnnews@hn.com </span> để được gia hạn. </p>
                            </div>
                        </div>

                        <!-- Change password -->
                        <div class="content collapse" id="change-password" data-parent="#tab-content">
                            <div id="passwordForm" class="col-md-8 passchange">
                                <!-- Old password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu cũ </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="oldpassword" id="user-oldpassword" placeholder="Nhập mật khẩu cũ"
                                        autocomplete="off">
                                </div>
                                <!-- New password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu mới </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="newpassword" id="user-newpassword" placeholder="Nhập mật khẩu mới"
                                        autocomplete="off">
                                </div>
                                <!-- Retype new password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Nhập lại mật khẩu </label>
                                    <input type="password" class="input-lg form-control form-text-size"
                                        name="retypepassword" id="user-retypepassword"
                                        placeholder="Nhập lại mật khẩu mới" autocomplete="off">
                                </div>
                                <button class="col-md-4 btn btn-load btn-lg btn-primary" id="btn-user-changepass"
                                    data-loading-text="Changing Password..."> Đổi mật khẩu </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Popup --}}
            <div class="row popup-notificationSuccess">
                <div class="col-md-12 noti-popup">
                    <form id="success-logout" method="POST" action="/dangxuat">
                        <p class="popup-title"> THÔNG BÁO </p>
                        <p class="popup-content"> Thay đổi mật khẩu <span style="color: rgb(40, 200, 0)">thành
                                công</span>. Bạn có thể kiểm tra bằng cách<a onclick="$('#success-logout').submit();"
                                class="changepass-logout">&nbsp;ĐĂNG XUẤT&nbsp;</a>và vào lại hệ thống. </p>
                        <button type="button" class="btn btn-dark close-btn"> Đóng </button>
                    </form>
                </div>
            </div>

            <div class="row popup-notificationFailOldPass">
                <div class="col-md-12 noti-popup">
                    <p class="popup-title"> THÔNG BÁO LỖI </p>
                    <p class="popup-content"> Thay đổi mật khẩu <span style="color: red">thất bại</span>
                        do mật khẩu cũ không đúng. </p>
                    <button type="button" class="btn btn-dark close-btn"> Đóng </button>
                </div>
            </div>

            <div class="row popup-notificationFailEqualPass">
                <div class="col-md-12 noti-popup">
                    <p class="popup-title"> THÔNG BÁO LỖI </p>
                    <p class="popup-content"> Thay đổi mật khẩu <span style="color: red">thất bại</span>
                        do mật khẩu nhập mới nhập lại không giống nhau. </p>
                    <button type="button" class="btn btn-dark close-btn"> Đóng </button>
                </div>
            </div>

            <div class="row popup-notificationFailNotTyping">
                <div class="col-md-12 noti-popup">
                    <p class="popup-title"> THÔNG BÁO LỖI </p>
                    <p class="popup-content"> Thay đổi mật khẩu <span style="color: red">thất bại</span>
                        do chưa điền đầy đủ thông tin yêu cầu. </p>
                    <button type="button" class="btn btn-dark close-btn"> Đóng </button>
                </div>
            </div>

            <div class="row popup-notificationFailEnoughCharacter">
                <div class="col-md-12 noti-popup">
                    <p class="popup-title"> THÔNG BÁO LỖI </p>
                    <p class="popup-content"> Thay đổi mật khẩu <span style="color: red">thất bại</span>
                        do mật khẩu phải có ít nhất 6 kí tự. </p>
                    <button type="button" class="btn btn-dark close-btn"> Đóng </button>
                </div>
            </div>
        </div>
        {{/ifCond}}

        {{#ifCond isAuthenticatedAccount authAccount.role_id 2}}
        {{!-- Writer --}}
        <div class="row writer-body">

            {{!-- Menu --}}
            <div class="col-md-3">
                <div class="menu-left">
                    <img class="avatar" src="/img/avatar/1.png">
                    <div class="name">{{authAccount.fullname}} </div>
                    <div class="boxshadow">
                        <li class="user-setting list bg-active-now">
                            <a href="" class="user-setting-link text-active-now" data-target="#personal-information"
                                data-toggle="collapse" id="btn-personal-information">
                                Thông tin cá nhân </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#new-post" data-toggle="collapse"
                                id="btn-new-post">
                                Viết bài mới </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#list-posts" data-toggle="collapse"
                                id="btn-list-posts">
                                Danh sách bài viết </a>
                        </li>
                        <li class="user-setting list">
                            <a href="" class="user-setting-link" data-target="#change-password" data-toggle="collapse"
                                id="btn-change-password">
                                Đổi mật khẩu </a>
                        </li>
                        <li class="user-setting list menu-logout">
                            <form id="writermenu-logout" method="POST" action="/dangxuat">
                                <a onclick="$('#writermenu-logout').submit();" class="user-setting-link"
                                    id="btn-logout">
                                    Đăng xuất </a>
                            </form>
                        </li>
                    </div>
                </div>
            </div>

            {{!-- Content --}}
            <div class="col-md-9">
                <div class="content-right">
                    <div id="tab-content">

                        <!-- Personal information -->
                        <div class="content collapse show" id="personal-information" data-parent="#tab-content">
                            <div class="row" style="margin: 10px 20px">
                                <div class="col-md-3" style="text-align: center;">
                                    <img src="/img/avatar/1.png" class="m-x-auto img-fluid rounded-circle ava"
                                        alt="avatar">
                                    <label class="custom-file">
                                        <span class="custom-file-control"> Đổi Avatar </span>
                                    </label>
                                </div>
                                <div class="col-md-9">
                                    <form role="form" method="POST" action="/thongtincanhan/capnhatthongtin">
                                        {{#with writer}}
                                        <!-- Name -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Họ và tên
                                            </label>
                                            <input name="writername" class="col-md-10 form-control form-text-size"
                                                type="text" placeholder="Nhập họ và tên của bạn" value="{{full_name}}">
                                        </div>

                                        <!-- Email -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Email </label>
                                            <input name="writeremail" class="col-md-10 form-control form-text-size"
                                                type="email" placeholder="Nhập email của bạn" value="{{email}}">
                                        </div>

                                        <!-- Day of birth -->
                                        <div class="form-group">
                                            <label class="col-md-6 col-form-label form-control-label"> Ngày tháng năm
                                                sinh
                                            </label>
                                            <input name="writerdob" class="col-md-10 form-control form-text-size"
                                                type="date" value="{{dob}}">
                                        </div>

                                        <!-- Writer name -->
                                        <div class="form-group">
                                            <label class="col-lg-6 col-form-label form-control-label"> Bút danh
                                            </label>
                                            <input name="penname" class="col-md-10 form-control form-text-size"
                                                type="text" placeholder="Nhập bút danh của bạn" value="{{pen_name}}">
                                        </div>

                                        <!-- Button -->
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary col-md-3" value="Cập nhật"> Cập
                                                nhật
                                            </button>
                                        </div>
                                        {{/with}}

                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- New post -->
                        <div class="content collapse" id="new-post" data-parent="#tab-content">
                            <div class="col-md-12 post-content-area">
                                <form role="form" method="POST" action="">
                                    <!-- Avatar post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Ảnh đại diện bài viết
                                        </label>
                                        <input name="ava-post" type="file" class="form-control-file form-text-size"
                                            style="padding: 5px 0px;" aria-describedby="fileHelp">
                                    </div>
                                    <!-- Title post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Tiêu đề bài viết
                                        </label>
                                        <input name="title-post" class="col-md-10 form-control form-text-size"
                                            type="text" placeholder="Nhập tiêu đề">
                                    </div>
                                    <!-- Summary post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Tóm tắt bài viết
                                        </label>
                                        <textarea name="summary-post" class="col-md-10 form-control form-text-size"
                                            type="text" placeholder="Nhập tóm tắt bài viết"></textarea>
                                    </div>
                                    <!-- Inside post -->
                                    <div class="form-group">
                                        <label class="col-md-6 col-form-label form-control-label"> Nội dung bài viết
                                        </label>
                                        <div class="col-md-10" style="padding: 0;">
                                            <textarea class="col-md-10 form-control form-text-size"
                                                name="editor1"></textarea></div>
                                        <script>
                                            CKEDITOR.replace('editor1');
                                        </script>
                                    </div>
                                    <!-- Category and tag post -->
                                    <div class="form-group row" style="margin: 0;">
                                        <div class="col-md-4" style="padding-left: 0;">
                                            <label class="col-form-label form-control-label"> Chuyên mục bài viết
                                            </label>
                                            <select name="category-post" class="col-md-12 form-control form-text-size"
                                                placeholder="Chọn chuyên mục bài viết">
                                                <option> Giao thông </option>
                                                <option> Xã hội </option>
                                                <option> Thế giới </option>
                                                <option> Giải trí </option>
                                            </select>
                                        </div>
                                        <div class="col-md-8" style="padding-left: 0;">
                                            <label class="col-form-label form-control-label"> Nhãn dán bài viết </label>
                                            <input name="tag-post" class="col-md-9 form-control form-text-size"
                                                type="text" data-role="tagsinput" placeholder="Gán nhãn cho bài viết">
                                        </div>
                                    </div>
                                    <!-- Button -->
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary col-md-3" value="Gửi bài viết">
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- List posts -->
                        <div class="content collapse" id="list-posts" data-parent="#tab-content">
                            <div class="col-md-12 listposts">
                                {{!-- Filter --}}
                                <div class="col-form-label form-control-label"> Sắp xếp bài viết </div>
                                <div class="row content-filter">
                                    <a id="filter-0" class="filter-btn filter-active"> Tất cả </a>
                                    <a id="filter-1" class="filter-btn"> Đã xuất bản </a>
                                    <a id="filter-2" class="filter-btn"> Đã duyệt và chờ xuất bản </a>
                                    <a id="filter-3" class="filter-btn"> Chưa được duyệt </a>
                                    <a id="filter-4" class="filter-btn"> Bị từ chối </a>
                                </div>
                                {{!-- <div class="row my-1">

                                </div> --}}

                                {{!-- Content list posts --}}
                                {{#each writerpostlist}}
                                <div class="row content-list-post all-post">
                                    <div class="col-md-12 content-title">
                                        {{title}}
                                    </div>
                                    <div class="col-md-4 content-datesend">
                                        Chuyên mục:&nbsp; <strong
                                            style="font-weight: 600; color: black;">{{subcategory_name}}</strong>
                                    </div>

                                    {{#ifEquals status_post '1'}}
                                    <div class="col-md-5 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: rgb(40, 200, 0)">{{status_name}}</strong>
                                    </div>
                                    {{/ifEquals}}

                                    {{#ifEquals status_post '2' }}
                                    <div class="col-md-5 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: blue">{{status_name}}</strong>
                                    </div>
                                    {{/ifEquals}}

                                    {{#ifEquals status_post '3' }}
                                    <div class="col-md-5 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: #ffc107">{{status_name}}</strong>
                                    </div>
                                    {{/ifEquals}}

                                    {{#ifEquals status_post '4'}}
                                    <div class="col-md-3 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: red">{{status_name}}</strong>
                                    </div>
                                    <div class="col-md-6 content-button">
                                        <a class="col-md-6" href="#"> Xem góp ý </a>
                                        <a class="col-md-6" href="#"> Chỉnh sửa </a>
                                    </div>
                                    {{/ifEquals}}
                                </div>
                                {{/each}}

                                {{#each poststatus1}}
                                <div class="row content-list-post one-post">
                                    <div class="col-md-12 content-title">
                                        {{title}}
                                    </div>
                                    <div class="col-md-4 content-datesend">
                                        Chuyên mục:&nbsp; <strong
                                            style="font-weight: 600; color: black;">{{subcategory_name}}</strong>
                                    </div>
                                    <div class="col-md-5 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: rgb(40, 200, 0)">{{status_name}}</strong>
                                    </div>
                                </div>
                                {{/each}}

                                {{#each poststatus2}}
                                <div class="row content-list-post two-post">
                                    <div class="col-md-12 content-title">
                                        {{title}}
                                    </div>
                                    <div class="col-md-4 content-datesend">
                                        Chuyên mục:&nbsp; <strong
                                            style="font-weight: 600; color: black;">{{subcategory_name}}</strong>
                                    </div>
                                    <div class="col-md-5 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: blue">{{status_name}}</strong>
                                    </div>
                                </div>
                                {{/each}}

                                {{#each poststatus3}}
                                <div class="row content-list-post three-post">
                                    <div class="col-md-12 content-title">
                                        {{title}}
                                    </div>
                                    <div class="col-md-4 content-datesend">
                                        Chuyên mục:&nbsp; <strong
                                            style="font-weight: 600; color: black;">{{subcategory_name}}</strong>
                                    </div>
                                    <div class="col-md-5 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: #ffc107">{{status_name}}</strong>
                                    </div>
                                    <div class="col-md-3 content-button text-right">
                                        <a class="col-md-6" href="#"> Chỉnh sửa </a>
                                    </div>
                                </div>
                                {{/each}}

                                {{#each poststatus4}}
                                <div class="row content-list-post four-post">
                                    <div class="col-md-12 content-title">
                                        {{title}}
                                    </div>
                                    <div class="col-md-4 content-datesend">
                                        Chuyên mục:&nbsp; <strong
                                            style="font-weight: 600; color: black;">{{subcategory_name}}</strong>
                                    </div>
                                    <div class="col-md-3 content-status">
                                        Trạng thái:&nbsp; <strong
                                            style="font-weight: 600; color: red">{{status_name}}</strong>
                                    </div>
                                    <div class="col-md-5 content-button text-right">
                                        <a class="col-md-6" href="#"> Xem góp ý </a>
                                        <a class="col-md-6" href="#"> Chỉnh sửa </a>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        <!-- Change password -->
                        <div class="content collapse" id="change-password" data-parent="#tab-content">
                            <div id="passwordForm" class="col-md-8 passchange">
                                <!-- Old password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu cũ </label>
                                    <input id="writer-oldpassword" type="password"
                                        class="input-lg form-control form-text-size" name="oldpassword" id="oldpassword"
                                        placeholder="Nhập mật khẩu cũ" autocomplete="off">
                                </div>
                                <!-- New password -->
                                <div class="form-group">
                                    <label class="col-form-label form-control-label"> Mật khẩu mới </label>
                                    <input id="writer-newpassword" type="password"
                                        class="input-lg form-control form-text-size" name="newpassword" id="newpassword"
                                        placeholder="Nhập mật khẩu mới" autocomplete="off">
                                </div>
                                <!-- Retype new password -->

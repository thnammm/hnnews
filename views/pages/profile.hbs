    <script>
        $(".user-setting-link").click(function () {
            $("#btn-personal-information").parent(".list").removeClass("bg-active-now");
            $("#btn-personal-information").removeClass("text-active-now");
            $("#btn-new-post").parent(".list").removeClass("bg-active-now");
            $("#btn-new-post").removeClass("text-active-now");
            $("#btn-list-posts").parent(".list").removeClass("bg-active-now");
            $("#btn-list-posts").removeClass("text-active-now");
            $("#btn-purchase-premium").parent(".list").removeClass("bg-active-now");
            $("#btn-purchase-premium").removeClass("text-active-now");
            $("#btn-change-password").parent(".list").removeClass("bg-active-now");
            $("#btn-change-password").removeClass("text-active-now");
            $(this).parent(".list").addClass("bg-active-now");
            $(this).addClass("text-active-now");
        });

        $(".filter-btn").click(function () {
            $("#filter-1").removeClass("filter-active");
            $("#filter-2").removeClass("filter-active");
            $("#filter-3").removeClass("filter-active");
            $("#filter-4").removeClass("filter-active");
            $("#filter-0").removeClass("filter-active");
            $(this).addClass("filter-active");
        })

        $(".one-post").hide();
        $(".two-post").hide();
        $(".three-post").hide();
        $(".four-post").hide();

        $("#filter-0").click(function () {
            $(".one-post").hide();
            $(".two-post").hide();
            $(".three-post").hide();
            $(".four-post").hide();
            $(".all-post").show();
            $(".all-post").css("visibility", "visible");
        })

        $("#filter-1").click(function () {
            $(".all-post").hide();
            $(".two-post").hide();
            $(".three-post").hide();
            $(".four-post").hide();
            $(".one-post").show();
            $(".one-post").css("visibility", "visible");
        })

        $("#filter-2").click(function () {
            $(".one-post").hide();
            $(".all-post").hide();
            $(".three-post").hide();
            $(".four-post").hide();
            $(".two-post").show();
            $(".two-post").css("visibility", "visible");
        })

        $("#filter-3").click(function () {
            $(".one-post").hide();
            $(".two-post").hide();
            $(".all-post").hide();
            $(".four-post").hide();
            $(".three-post").show();
            $(".three-post").css("visibility", "visible");
        })

        $("#filter-4").click(function () {
            $(".one-post").hide();
            $(".two-post").hide();
            $(".three-post").hide();
            $(".all-post").hide();
            $(".four-post").show();
            $(".four-post").css("visibility", "visible");
        })

        $(".user-setting").hover(function () {
            if ($(this).hasClass("menu-logout")) {
                $(this).children("form").children("#btn-logout").addClass("text-active-now");
            }
        }, function () {
            if ($(this).hasClass("menu-logout")) {
                $(this).children("form").children("#btn-logout").removeClass("text-active-now");
            }
        })

        $(".list").hover(function () {
            $(this).children(".user-setting-link").css("color", "white");
        }, function () {
            $(this).children(".user-setting-link").css("color", "black");
        });

        $(".close-btn").click(function () {
            $(".popup-notificationFailOldPass").hide();
            $(".popup-notificationFailEqualPass").hide();
            $(".popup-notificationFailNotTyping").hide();
            $(".popup-notificationFailEnoughCharacter").hide();
        })

        $(".popup-notificationSuccess").children("div").children("form").children("button").click(function () {
            $(".popup-notificationSuccess").hide();
            window.location.reload();
        })

        function btnuserchangepassClick() {
            // Create parameters
            var oldpass = $("#user-oldpassword").val();
            var newpass = $("#user-newpassword").val();
            var retypepass = $("#user-retypepassword").val();

            $.post('/thongtincanhan/doimatkhau', {
                oldpass: oldpass,
                newpass: newpass,
                retypepass: retypepass
            }, function (result) {
                if (result === 'FailOldPass') {
                    $(".popup-notificationFailOldPass").show();
                } else if (result === 'FailEqualPass') {
                    $(".popup-notificationFailEqualPass").show();
                } else if (result === 'FailEnoughCharacter') {
                    $(".popup-notificationFailEnoughCharacter").show();
                } else if (result === 'FailNotTyping') {
                    $(".popup-notificationFailNotTyping").show();
                } else if (result === 'Success') {
                    $(".popup-notificationSuccess").show();
                }
            })
        }

        $("#btn-user-changepass").click(function () {
            btnuserchangepassClick();
        })

        function btnwriterchangepassClick() {
            // Create parameters
            var oldpass = $("#writer-oldpassword").val();
            var newpass = $("#writer-newpassword").val();
            var retypepass = $("#writer-retypepassword").val();

            $.post('/thongtincanhan/doimatkhau', {
                oldpass: oldpass,
                newpass: newpass,
                retypepass: retypepass
            }, function (result) {
                if (result === 'FailOldPass') {
                    $(".popup-notificationFailOldPass").show();
                } else if (result === 'FailEqualPass') {
                    $(".popup-notificationFailEqualPass").show();
                } else if (result === 'FailEnoughCharacter') {
                    $(".popup-notificationFailEnoughCharacter").show();
                } else if (result === 'FailNotTyping') {
                    $(".popup-notificationFailNotTyping").show();
                } else if (result === 'Success') {
                    $(".popup-notificationSuccess").show();
                }
            })
        }

        $("#btn-writer-changepass").click(function () {
            btnwriterchangepassClick();
        })

    </script>

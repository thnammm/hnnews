    <script>
        $(document).ready(function () {
            $(".img-click").click(function () {
                if ($(this).children("img").hasClass("active") === false) {
                    $(".img-click").children(".active").removeClass("active");
                    $(this).children("img").addClass("active");
                }
            });

            $(".add-category-main-btn").click(function () {
                $(".popup-background").show();
            });

            $(".add-tag-main-btn").click(function () {
                $(".popup-background").show();
            });

            $(".close-btn").click(function () {
                $(".popup-background").hide();
                $(".popup-notificationFailSame").hide();
                $(".popup-notificationFailTyping").hide();
                $(".popup-notificationFailNotEnough").hide();
                $(".popup-notificationSuccess").hide();
            });

            // Add Category Click
            function btnaddcategoryClick() {
                // Create parameter
                var categorydad = $("select[name=categorydad]").val();
                var categoryeditor = $("select[name=categoryeditor]").val();
                var categoryson = $("#category-son").val();

                // Final action
                $.post("/admin-dashboard/addcategory",
                    {
                        subcat: categoryson,
                        cat: categorydad,
                        editor: categoryeditor
                    },
                    function (result) {
                        if (result === "Success") {
                            $(".popup-notificationSuccess").show();
                        } else if (result === "FailNotEnough") {
                            $(".popup-notificationFailNotEnough").show();
                        } else {
                            $(".popup-notificationFailSame").show();
                        }
                    });
            }

            $("#btn-add-category").click(function () {
                $(".popup-background").hide();
                btnaddcategoryClick();
            })

            // Add Tag Click
            function btnaddtagClick() {
                // Create parameter
                var newtag = $("#tag-name").val();

                // Final action
                $.post("/admin-dashboard/addtag",
                    { newtag: newtag },
                    function (result) {
                        if (result === "Success") {
                            $(".popup-notificationSuccess").show();
                        } else if (result === "FailTyping") {
                            $(".popup-notificationFailTyping").show();
                        } else {
                            $(".popup-notificationFailSame").show();
                        }
                    });
            }

            $("#btn-add-tag").click(function () {
                $(".popup-background").hide();
                btnaddtagClick();
            })
        })
    </script>

                var username = $("#account-username").val();
                var pass = $("#account-password").val();
                var roleid = parseInt($("select[name=accountrole]").val());
                var fullname = $("#account-fullname").val();
                var email = $("#account-email").val();
                var penname = $("#account-penname").val();
                var dob = $("#account-dob").val();
                var start = $("#account-startdate").val();
                var end = $("#account-enddate").val();

                // Final action
                $.post("/admin-dashboard/addaccount",
                    {
                        username: username,
                        pass: pass,
                        roleid: roleid,
                        fullname: fullname,
                        email: email,
                        penname: penname,
                        dob: dob,
                        start: start,
                        end: end
                    },
                    function (result) {
                        if (result === "FailBoth") {
                            $(".popup-background").hide();
                            $(".popup-notificationFailBoth").show();
                        } else if (result === "FailEmail") {
                            $(".popup-background").hide();
                            $(".popup-notificationFailEmail").show();
                        } else if (result === "FailUserName") {
                            $(".popup-background").hide();
                            $(".popup-notificationFailUserName").show();
                        } else if (result === "FailFull") {
                        } else {
                            $(".popup-background").hide();
                            $(".popup-notificationSuccess").show();
                        }
                    });
            }

            $("#btn-add-account").click(function () {
                btnaddaccountClick();
            })
        })
    </script>
